<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF">
    <FrameLayout
        android:layout_above="@id/shoulder_panel"
        android:id="@+id/shoulder_frame"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/shoulder_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <com.bupt.aibeauty.view.MyBaseView
            android:id="@+id/shoulder_myview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/shoulder_panel"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:enabled="false"
                android:text="宽窄"
                android:ems="4"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.bupt.aibeauty.view.MySeekBar
                android:id="@+id/shoulder_seekbar1"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:enabled="false"
                android:text="直角肩"
                android:textColor="#000000"
                android:ems="4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.bupt.aibeauty.view.MySeekBar
                android:id="@+id/shoulder_seekbar2"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:enabled="false"
                android:text="天鹅颈"
                android:textColor="#000000"
                android:ems="4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.bupt.aibeauty.view.MySeekBar
                android:id="@+id/shoulder_seekbar3"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/shoulder_quit"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:enabled="false"
                android:textColor="#000000"
                android:text="美肩"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/shoulder_save"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>