<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bupt.aibeauty.activity.MainActivity">
    <com.zhouwei.mzbanner.MZBannerView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:open_mz_mode="false"
            app:canLoop="true"
            app:middle_page_cover="false"
            app:indicatorAlign="center"
            app:indicatorPaddingLeft="10dp" />
    <RelativeLayout
        android:layout_below="@id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            >
            <RelativeLayout
                android:layout_margin="10dp"
                android:id="@+id/index_camera"
                android:background="@drawable/btn_index_camera"
                android:layout_width="150dp"
                android:layout_height="100dp">
                <ImageView
                    android:padding="10dp"
                    android:scaleType="center"
                    android:id="@+id/index_icon_camera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/index_icon_camera"/>
                <TextView
                    android:layout_below="@id/index_icon_camera"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相机"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="10dp"
                android:id="@+id/index_album"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_index_album">
                <ImageView
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/index_icon_album"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/index_icon_album"/>
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_below="@id/index_icon_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI 修身"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="10dp"
                android:id="@+id/index_filter"
                android:background="@drawable/btn_index_filter"
                android:layout_width="150dp"
                android:layout_height="100dp">
                <ImageView
                    android:padding="10dp"
                    android:scaleType="center"
                    android:id="@+id/index_icon_filter"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/index_icon_filter"/>
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_below="@id/index_icon_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精致滤镜"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="10dp"
                android:id="@+id/index_cut"
                android:background="@drawable/btn_index_crop"
                android:layout_width="150dp"
                android:layout_height="100dp">
                <ImageView
                    android:padding="10dp"
                    android:scaleType="center"
                    android:id="@+id/index_icon_cut"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/index_icon_cut"/>
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_below="@id/index_icon_cut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图像剪切"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
            </RelativeLayout>
        </GridLayout>
    </RelativeLayout>
</RelativeLayout>
